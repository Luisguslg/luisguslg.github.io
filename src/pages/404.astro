---
import BaseLayout from "../layouts/BaseLayout.astro";
import Container from "../components/Container.astro";
import CTAButton from "../components/CTAButton.astro";
---

<BaseLayout title="404 — Página no encontrada">
  <Container>
    <div class="min-h-[70vh] py-16 sm:py-24">
      <p class="font-mono text-xs uppercase tracking-wider text-muted">404</p>
      <h1 class="mt-3 text-3xl font-semibold tracking-tight sm:text-4xl">Página no encontrada</h1>
      <p class="mt-3 max-w-xl text-muted">
        El enlace puede estar roto o la página fue movida.
      </p>
      <div class="mt-8 flex gap-3">
        <CTAButton variant="primary" href="/">Volver al inicio</CTAButton>
        <CTAButton variant="secondary" href="#contact">Contacto</CTAButton>
      </div>
    </div>
  </Container>
</BaseLayout>

