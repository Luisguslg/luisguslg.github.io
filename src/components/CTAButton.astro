---
type Props = {
  href?: string;
  variant?: "primary" | "secondary" | "ghost";
  external?: boolean;
  disabled?: boolean;
  class?: string;
};
const { href = "#", variant = "secondary", external = false, disabled = false, class: className } = Astro.props;

const base =
  "inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[hsl(var(--accent))] focus-visible:ring-offset-2 focus-visible:ring-offset-bg";
const variants: Record<string, string> = {
  primary: "bg-accent text-[hsl(var(--bg))] hover:bg-accent/90",
  secondary: "border border-border bg-card hover:bg-card/80",
  ghost: "hover:bg-card/60",
};
const state = disabled ? "pointer-events-none opacity-60" : "";
const rel = external ? "noreferrer noopener" : undefined;
const target = external ? "_blank" : undefined;
---

<a
  href={disabled ? undefined : href}
  aria-disabled={disabled ? "true" : undefined}
  class={`${base} ${variants[variant]} ${state} ${className ?? ""}`}
  rel={rel}
  target={target}
>
  <slot />
</a>

