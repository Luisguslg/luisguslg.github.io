---
type Props = {
  id?: string;
  eyebrow?: string;
  title?: string;
  description?: string;
  class?: string;
};
const { id, eyebrow, title, description, class: className } = Astro.props;
---

<section id={id} class={`py-16 sm:py-20 ${className ?? ""}`}>
  <slot name="header">
    {(eyebrow || title || description) && (
      <header class="mb-10">
        {eyebrow && (
          <p class="font-mono text-xs uppercase tracking-wider text-muted">{eyebrow}</p>
        )}
        {title && (
          <h2 class="mt-2 text-balance text-2xl font-semibold tracking-tight sm:text-3xl">
            {title}
          </h2>
        )}
        {description && <p class="mt-3 max-w-2xl text-muted">{description}</p>}
      </header>
    )}
  </slot>

  <slot />
</section>

